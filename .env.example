# =============================================================================
# RepoAuditor AI - Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control!
# =============================================================================

# =============================================================================
# GitHub App Configuration
# =============================================================================
# Get these values from your GitHub App settings page
# URL: https://github.com/settings/apps/YOUR_APP_NAME

# GitHub App ID (found on app settings page)
GITHUB_APP_ID=123456

# Path to your GitHub App private key file
# Download from GitHub App settings > "Generate a private key"
GITHUB_PRIVATE_KEY_PATH=./private-key.pem

# Webhook secret for verifying GitHub webhook signatures
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here_min_16_chars

# GitHub App installation ID (optional, auto-detected if not set)
# Found in the URL when you install the app: /installations/{ID}
GITHUB_INSTALLATION_ID=

# =============================================================================
# Google Gemini API Configuration
# =============================================================================
# Get your API key from Google AI Studio: https://aistudio.google.com/

# Gemini API key (starts with AIza)
GEMINI_API_KEY=your_gemini_api_key_here

# Model to use for code review
# Options: gemini-2.5-flash, gemini-1.5-pro-latest, gemini-1.5-flash
GEMINI_MODEL_NAME=gemini-2.5-flash

# Model temperature (0.0-1.0, lower = more deterministic)
GEMINI_TEMPERATURE=0.2

# Maximum tokens in model response (1-32768)
GEMINI_MAX_TOKENS=8192

# =============================================================================
# JIRA Integration Configuration (Optional)
# =============================================================================
# Leave these blank if you don't want JIRA integration
#
# IMPORTANT NOTES:
# - Do NOT add quotes around values (e.g., JIRA_BASE_URL=value, NOT "value")
# - Do NOT include /rest/api/3 in base URL (it's added automatically)
# - Base URL MUST start with https://
# - Test your config with: python scripts/test_jira_connection.py
# =============================================================================

# JIRA instance base URL
# Format: https://your-domain.atlassian.net (NO /rest/api/3, NO quotes)
# Example: JIRA_BASE_URL=https://acme-corp.atlassian.net
JIRA_BASE_URL=

# JIRA account email (NO quotes)
# Example: JIRA_EMAIL=john.doe@company.com
JIRA_EMAIL=

# JIRA API token (NO quotes, NO spaces)
# Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
# Example: JIRA_API_TOKEN=ATATT3xFfGF0ABCDEFxyz1234567890
JIRA_API_TOKEN=

# Default JIRA project key for /jira command (optional, usually uppercase)
# Example: JIRA_DEFAULT_PROJECT_KEY=TECH
JIRA_DEFAULT_PROJECT_KEY=TECH

# Automatically create JIRA tickets for CRITICAL/HIGH findings after /review
# When enabled, tickets are created automatically without running /jira command
# Options: true or false (default: false)
JIRA_AUTO_CREATE_TICKETS=true

# =============================================================================
# Server Configuration
# =============================================================================

# Server bind address (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port number
PORT=8000

# Enable debug mode (development only, never use in production!)
DEBUG=False

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Feature Flags and Performance Configuration
# =============================================================================

# Enable response caching for improved performance
ENABLE_CACHING=True

# Cache time-to-live in seconds (default: 3600 = 1 hour)
CACHE_TTL_SECONDS=3600

# Rate limit: maximum API requests per hour per repository
RATE_LIMIT_PER_HOUR=100

# Maximum number of files to review per pull request
MAX_FILES_PER_REVIEW=50

# Maximum time for review process in seconds (default: 300 = 5 minutes)
REVIEW_TIMEOUT_SECONDS=300

# =============================================================================
# Application Metadata (Optional)
# =============================================================================

# Application name (for display/logging purposes)
APP_NAME=RepoAuditor AI

# Application version
APP_VERSION=1.0.0

# =============================================================================
# Environment-Specific Examples
# =============================================================================

# --- Development Environment ---
# DEBUG=True
# LOG_LEVEL=DEBUG
# ENABLE_CACHING=False

# --- Production Environment ---
# DEBUG=False
# LOG_LEVEL=INFO
# ENABLE_CACHING=True
# RATE_LIMIT_PER_HOUR=500

# --- Testing Environment ---
# DEBUG=True
# LOG_LEVEL=DEBUG
# ENABLE_CACHING=False
# RATE_LIMIT_PER_HOUR=1000
